<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
	monitoring="autodetect" dynamicConfig="true">

	<diskStore path="java.io.tmpdir/ehcache" />

	<defaultCache eternal="false" maxElementsInMemory="2000"
		maxEntriesLocalHeap="10000" overflowToDisk="false" diskPersistent="false"
		timeToIdleSeconds="1800" timeToLiveSeconds="1800"
		memoryStoreEvictionPolicy="LRU">
	</defaultCache>

	<cache name="entity" maxEntriesLocalHeap="10000" overflowToDisk="false"
		diskPersistent="false" timeToIdleSeconds="600" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LRU" statistics="true">
	</cache>

</ehcache>